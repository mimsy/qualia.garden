{
	"name": "qualia-garden",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint src workers",
		"lint:fix": "eslint src workers --fix",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"db:migrate": "wrangler d1 migrations apply qualia-garden --local",
		"db:migrate:remote": "wrangler d1 migrations apply qualia-garden --remote",
		"worker:dev": "wrangler dev --config workers/poll-processor/wrangler.toml",
		"worker:deploy": "wrangler deploy --config workers/poll-processor/wrangler.toml",
		"deploy": "vite build && wrangler pages deploy .svelte-kit/cloudflare"
	},
	"dependencies": {
		"@openrouter/ai-sdk-provider": "^1.5.4",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"ai": "^6.0.5",
		"better-auth": "^1.4.10",
		"kysely": "^0.28.9",
		"kysely-d1": "^0.4.0",
		"marked": "^17.0.1",
		"nanoid": "^5.1.6",
		"svelte": "^5.46.1",
		"typescript": "^5.9.3",
		"umap-js": "^1.4.0",
		"vite": "^7.3.0",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251228.0",
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.57.0",
		"@tailwindcss/postcss": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@typescript-eslint/eslint-plugin": "^8.52.0",
		"@typescript-eslint/parser": "^8.52.0",
		"@vitest/coverage-v8": "^4.0.16",
		"autoprefixer": "^10.4.23",
		"eslint": "^9.39.2",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^17.0.0",
		"jsdom": "^27.4.0",
		"postcss": "^8.5.6",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"vitest": "^4.0.16",
		"wrangler": "^4.54.0"
	}
}
